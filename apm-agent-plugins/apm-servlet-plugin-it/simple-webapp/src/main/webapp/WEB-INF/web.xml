<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Simple Web App</display-name>
    <filter>
        <filter-name>ApmFilter</filter-name>
        <filter-class>co.elastic.apm.servlet.ApmFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ApmFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ApmTestHelperServlet</servlet-name>
        <servlet-class>co.elastic.apm.servlet.ApmTestHelperServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApmTestHelperServlet</servlet-name>
        <url-pattern>/apm/*</url-pattern>
    </servlet-mapping>
</web-app>
